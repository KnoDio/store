.top {
    height: 80rpx;
    width: 100%;
    background-color: #FFE4E1;
    /* align-items: center; */
  }
  
  .search-input {
    /* 宽度 */
    width: 80%;
    /* 高度 */
    height: 60rpx;
    /* 边界的左外边距 */
    margin-left: 0rpx;
    margin-top: 0rpx;
    /* 边框：参数1：边界宽度 参数2：实线 参数3：颜色*/
    border: 10rpx solid #FFE4E1;
    /* 圆角边框 */
    border-radius: 50rpx;
    /* 边框与顶部距离 */
    border-top: rpx;
    /* 内容的左边距 */
    padding-left: 20rpx;
    /* 背景 */
    background-color: white;
  }
  
  .search-button{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20%;
    height: 80rpx;
    margin-top: -80rpx;
    margin-left: 81%;
    font-size: 110%;
  }
  
  .bar{
    width: 100%;
    height: 80rpx;
  }
  
  .things {
    width: 100%;
    margin-top: 0%;
  }
  
  .box {
    display: flex;
    flex-direction: row;
    width: 92%;
    height: 150rpx;
    margin-left: 4%;
    border: 7rpx solid #FFE4E1;
    border-top: none;
    border-left: none;
    border-right: none;
  }
  
  .photo{
    width: 20%;
    height: 80%;
    margin-top: 2%;
    border-radius: 20rpx;
  }
